{
  "name": "epic_mail",
  "version": "1.0.0",
  "description": "EPIC_Mail empowers it's users to exchange messages/information over the internet",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && node src/bin/v1/production",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "dev-start": "nodemon src/bin/v1/dev",
    "clean": "rm -rf build",
    "build": "cross-env npm run clean && mkdir build && babel src -s -d build",
    "test": "npm run build && nyc mocha build/v1/__tests__/*.js --timeout 10000 --exit",
    "production": "npm run build && node src/bin/v1/production",
    "start-v2": "npm run createTable && nodemon src/bin/v2/production",
    "coverage-v2": "nyc report --reporter=text-lcov | coveralls",
    "coveralls-v2": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "dev-start-v2": "cross-env babel-watch src/bin/v2/dev",
    "test-v2": "npm run build/v2 && nyc mocha build/v2/__tests__/*.js --timeout 10000 --exit",
    "production-v2": "npm run build && node src/bin/v2/production",
    "createTable": "npm run build && node build/v2/db/db createTheTables && node build/v2/db/db createTheTables",
    "dropTable": "node build/v2/db/db dropTheTables"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tolumide-ng/EPIC_Mail.git"
  },
  "keywords": [
    "EPIC_Mail",
    "ES-6",
    "Nodejs"
  ],
  "author": "tolumide",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tolumide-ng/EPIC_Mail/issues"
  },
  "homepage": "https://github.com/tolumide-ng/EPIC_Mail#readme",
  "dependencies": {
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "istanbul": "^0.4.5",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.10",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.8.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "babel-watch": "^7.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "faker": "^4.1.0",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0"
  }
}
